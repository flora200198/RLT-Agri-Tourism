const express = require('express');
const router = express.Router();
const Booking = require('../Models/Booking');

// POST /api/activity/book
router.post('/book', async (req, res) => {
  try {
    const { customerName, customerPhone, payment, activityDetails } = req.body;

    if (!customerName || !customerPhone || !payment || !activityDetails) {
      return res.status(400).json({ error: "All required fields must be filled" });
    }

    const booking = new Booking({
      type: "activity",
      customerName,
      customerPhone,
      payment,
      activityDetails
    });

    await booking.save();
    res.status(201).json({ message: "Activity booking successful", booking });
  } catch (err) {
    console.error(err);
    res.status(500).json({ error: "Server error while booking activity" });
  }
});

module.exports = router;
